# Proxmox Configuration
PROXMOX_HOST=your-proxmox-host.local
PROXMOX_PORT=8006
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your-password

# Resource Thresholds
THRESHOLD_CPU=80
THRESHOLD_MEMORY=80
THRESHOLD_STORAGE=85

# Default VM Settings
DEFAULT_TEMPLATE=ubuntu-22.04
DEFAULT_STORAGE=local-lvm
DEFAULT_NETWORK=vmbr0

# Backup Settings
BACKUP_STORAGE=backup-nfs
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=3

# Monitoring Settings
MONITORING_INTERVAL=300
MONITORING_TIMEOUT=30
MONITORING_RETRIES=3

# Notification Settings
NOTIFY_EMAIL=admin@example.com
NOTIFY_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NOTIFY_ON_WARNING=true
NOTIFY_ON_CRITICAL=true