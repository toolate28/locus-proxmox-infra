{
  "mcpServers": {
    "filesystem-ro": {
      "type": "local",
      "command": "mcp-filesystem",
      "args": ["--mode", "readonly"],
      "tools": ["list_files", "read_file"]
    },
    "http-client": {
      "type": "local",
      "command": "mcp-http",
      "args": [],
      "env": {
        "ALLOWED_HOSTS": "pve-node-1.lan,pve-node-2.lan,pbs.lan,api.github.com,pve.proxmox.com,vercel.com",
        "PROXMOX_API_URL": "${env:PROXMOX_API_URL}",
        "PROXMOX_TOKEN_ID": "${env:PROXMOX_TOKEN_ID}",
        "PROXMOX_TOKEN_SECRET": "${env:PROXMOX_TOKEN_SECRET}",
        "VERCEL_TOKEN": "${env:VERCEL_TOKEN}"
      },
      "tools": ["http_request"]
    },
    "git": {
      "type": "local",
      "command": "mcp-git",
      "args": [],
      "tools": ["git_clone", "git_status", "git_commit"]
    },
    "github": {
      "type": "local",
      "command": "mcp-github",
      "args": [],
      "env": {
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}",
        "GITHUB_DEFAULT_OWNER": "toolate28"
      },
      "tools": ["github_pr", "github_issue", "github_repo"]
    },
    "kv-store": {
      "type": "local",
      "command": "mcp-kv",
      "args": [],
      "env": {
        "KV_PATH": "/tmp/locus_kv_state.db"
      },
      "tools": ["kv_get", "kv_set", "kv_delete"]
    }
  },

  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "json": true,
    "yaml": true,
    "bash": true,
    "shell": true
  },
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.advanced": {
    "debug.overrideProxyUrl": "",
    "debug.testOverrideProxyUrl": "",
    "debug.filterLogCategories": []
  },
  "mcp": {
    "projectLocus": {
      "enabled": true,
      "version": "1.0.0",
      "ref_tag": "LOCUS-MCP-CONFIG-001",
      "space_id": "locus-proxmox-infra-space",
      "repository": "toolate28/locus-proxmox-infra",
      "agents": {
        "claude_pro": {
          "ref_tag": "LOCUS-CLAUDE-001",
          "status": "active",
          "capabilities": [
            "code_analysis",
            "documentation_generation", 
            "infrastructure_planning",
            "automation_scripting",
            "security_review",
            "debugging",
            "architecture_design"
          ],
          "api_integration": "anthropic_claude_api",
          "auth_method": "github_secrets",
          "secret_key": "CLAUDE_API_KEY",
          "heartbeat_interval": 60,
          "priority": "high",
          "specialization": "code_and_documentation"
        },
        "perplexity_pro": {
          "ref_tag": "LOCUS-PERPLEXITY-001", 
          "status": "active",
          "capabilities": [
            "research",
            "real_time_data",
            "infrastructure_monitoring",
            "report_generation",
            "trend_analysis",
            "freshness_validation",
            "knowledge_synthesis"
          ],
          "api_integration": "perplexity_ai_api",
          "auth_method": "github_secrets",
          "secret_key": "PERPLEXITY_API_KEY",
          "heartbeat_interval": 60,
          "freshness_loop": 14400,
          "priority": "medium",
          "specialization": "research_and_monitoring"
        },
        "proton_lumo": {
          "ref_tag": "LOCUS-LUMO-001",
          "status": "active", 
          "capabilities": [
            "secure_communications",
            "encrypted_storage",
            "vpn_management",
            "privacy_enforcement",
            "secure_tunneling",
            "zero_trust_networking"
          ],
          "api_integration": "proton_lumo_api",
          "auth_method": "github_secrets",
          "secret_keys": ["PROTON_LUMO_TOKEN", "LUMO_INSTANCE_ID"],
          "heartbeat_interval": 60,
          "priority": "high",
          "specialization": "security_and_privacy"
        }
      },
      "infrastructure": {
        "targets": {
          "proxmox_ve": {
            "enabled": true,
            "nodes": 3,
            "monitoring_interval": 300,
            "auth_secret": "PVE_API_TOKEN"
          },
          "proxmox_backup_server": {
            "enabled": true,
            "instances": 2,
            "monitoring_interval": 300,
            "auth_secret": "PBS_API_TOKEN"
          },
          "proxmox_mail_gateway": {
            "enabled": true,
            "containers": true,
            "monitoring_interval": 300
          },
          "cloud_resources": {
            "enabled": true,
            "services": ["cdn", "storage", "dns"],
            "monitoring_interval": 300,
            "auth_secret": "AWS_ACCESS_KEY"
          }
        },
        "automation_scripts": {
          "resource_check": "./automation/resource_check.sh",
          "status_report": "./automation/status_report.sh", 
          "vm_provision": "./automation/vm_provision.sh",
          "heartbeat_monitor": "./automation/heartbeat_monitor.sh",
          "freshness_loop": "./automation/freshness_loop.sh",
          "ref_tag_generator": "./automation/generate_ref_tag.sh"
        }
      },
      "ref_tagging": {
        "enabled": true,
        "format": "LOCUS-{TYPE}{TIMESTAMP}-{COUNTER}",
        "enforce_on_jobs": true,
        "enforce_on_tasks": true,
        "enforce_on_artifacts": true,
        "audit_trail": "/tmp/locus_ref_audit.log",
        "counter_file": "/tmp/locus_ref_counter"
      },
      "handover_flow": {
        "enabled": true,
        "notification_method": "webhook",
        "audit_enabled": true,
        "marker_directory": "./handover",
        "template_available": true
      },
      "security": {
        "secrets_management": {
          "method": "github_secrets",
          "no_credentials_in_repo": true,
          "rotation_enabled": true,
          "audit_logging": true
        },
        "access_control": {
          "model": "least_privilege",
          "multi_agent_coordination": true,
          "zero_trust_networking": true
        },
        "compliance": {
          "ref_tag_coverage": "100%",
          "secret_scanning": true,
          "code_owners_enforced": true
        }
      },
      "coordination": {
        "multi_agent_orchestration": true,
        "context_sharing_protocol": true,
        "decision_framework": true,
        "performance_monitoring": true,
        "conflict_resolution": "priority_based"
      },
      "workspace_settings": {
        "auto_generate_ref_tags": true,
        "context_preservation": true,
        "agent_handover_notifications": true,
        "security_validation": true,
        "audit_trail_integration": true
      }
    }
  },
  "files.associations": {
    "*.ref": "plaintext",
    "locus_*.json": "json",
    "locus_*.log": "log",
    "*.sh": "shellscript"
  },
  "json.schemas": [
  ],
  "shellcheck.enable": true,
  "shellcheck.run": "onSave",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "args": ["-l"],
      "env": {
        "LOCUS_REF_PREFIX": "LOCUS",
        "LOCUS_WORKSPACE": "${workspaceFolder}"
      }
    }
  },
  "search.exclude": {
    "**/tmp/**": true,
    "**/locus_*.json": false,
    "**/locus_*.log": false
  },
  "files.watcherExclude": {
    "**/tmp/**": true
  }
}